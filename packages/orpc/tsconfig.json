{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "allowImportingTsExtensions": false, // Don't require .js extensions
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
